{{> header}}

<div id="products-page" class="page-content">

<h2 class="has-text-centered">Products</h2>

<div class="columns is-multiline products">
    {{#each products}}
    <div class="column is-3 product">
        <img src={{bookImageUrl}} />
    
        <h6>{{title}}</h6>
        <h6>{{author}}</h6>
        <p>{{formatDate publicationDate}}</p>
        <p>{{price}}</p>
        <div class="columns">
            <div class="column"><a class="button is-primary">View Detail</a></div>
            <div class="column"><a class="button is-warning">Add To Cart</a></div>
        </div>
        
        
    </div>
    {{/each}}
</div>




</div>

{{> footer}}