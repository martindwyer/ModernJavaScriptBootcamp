{{> header}}

<div id="products-page" class="page-content">

    <h2 class="has-text-centered">Shopping Cart</h2>

    <table id="cart-table" class="table is-striped is-hoverable is-fullwidth">
        <thead>
            <th>Product ID</th>
            <th>Title</th>
            <th class="has-text-right">Price</th>
            <th class="has-text-right">Shipping</th>
            <th class="has-text-right">Quantity</th>
            <th class="has-text-right">Product Total</th>
            <th class="has-text-right">Remove</th>
        </thead>


        <tbody>
            {{#each cartProducts}}

            <tr>
                <td>{{product.id}}</td>
                <td>{{product.title}}</td>
                <td class="has-text-right">{{toDollars product.price}}</td>
                <td class="has-text-right">{{toDollars product.shippingCost}}</td>
                <td class="has-text-right">{{quantity}}</td>
                <td class="has-text-right">{{toDollars productTotal}}</td>
                <td class="has-text-right"><a href={{removeCartItem product.id}}><i class="far fa-times-circle"></i></a></td>
            </tr>


            {{/each}}
        </tbody>

        <tfoot>
            <tr><th class="has-text-right" colspan="5">Order Total</th><th class="has-text-right">{{toDollars totalDue}}</th><th></th></tr>
            
        </tfoot>
    </table>






</div>

{{> footer}}