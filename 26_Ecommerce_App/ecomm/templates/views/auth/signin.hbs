{{> header }}
<div class="page-content">

  <div id="signin-page">
  <h3>Sign In To Your Account</h3>
  <div id="signin-image">
            <div class="image"><img src="/images/logo.png" /></div>
            <div class="image"><img src="/images/store.png" /></div>
      </div>
  

  <form id="sigin-form" method="POST">
    <h6>Please enter your email and password to sign in.</h6>
    <input name="email" id="email" placeholder="email" class="input is-normal" />
    <input name="password" id="password" placeholder="password"  class="input is-normal"  />

    <button class="button is-primary">Sign In</button>
    <div id="signin-error">
      {{#if emailError}}
      {{emailError}}
      {{/if}}
      {{#if passwordError}}
      {{passwordError}}
      {{/if}}
    </div>
  </form>

</div>

<script src="/js/signin-validation.js"></script>

{{> footer }}